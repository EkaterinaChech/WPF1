<Application x:Class="WPF1.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:WPF1"
             xmlns:view="clr-namespace:WPF1.UserControls.ViewModels.Views"
             xmlns:models="clr-namespace:WPF1.UserControls.ViewModels.Models"
             xmlns:userControls="clr-namespace:WPF1.UserControls"
             DispatcherUnhandledException="Application_DispatcherUnhandledException"
             Startup="App_OnStartup">
    <Application.Resources>
        <ResourceDictionary>

            <ResourceDictionary.MergedDictionaries>

                <ResourceDictionary Source="Resources/ButtonStyles.xaml"/>
                <ResourceDictionary Source="Resources/LightTheme.xaml"/>

            </ResourceDictionary.MergedDictionaries>

            <DataTemplate DataType="{x:Type models:HomeViewModel}">
                <view:HomePage/>
            </DataTemplate>

            <DataTemplate DataType="{x:Type models:SettingsViewModel}">
                <userControls:SettingsPage/>
            </DataTemplate>

        </ResourceDictionary>
    </Application.Resources>
</Application>
